{
  "extends": "airbnb",
  "plugin": [
    "react"
  ],
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "browser": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "max-len": 1,
    "no-nested-ternary": 1,
    "no-underscore-dangle": 0,
    "arrow-body-style": 0,
    "comma-dangle": 0,
    "no-console": 0,
    "new-cap": 0
  },
  "globals": {
    "$": true,
    "remote": true,
    "ipcRenderer": true,
    "__DEV__": true
  }
}
